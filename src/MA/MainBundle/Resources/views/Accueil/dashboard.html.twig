
<section id="contact">
{#<section>#}
        <div class="section-content">
            <h1 class="section-header">Mes <span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> annonces en cours</span></h1>
            <h3>Gérer mes annonces.</h3>
        </div>
        <div class="contact-section">
            <div class="container">
                {% if annonces is not empty %}
                    <table id="dashboard" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Aperçu</th>
                            <th>Titre</th>
                            <th>Mise en ligne</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Aperçu</th>
                            <th>Titre</th>
                            <th>Mise en ligne</th>
                            <th>Actions</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% set i = 0 %}
                        {% for annonce in annonces %}
                            {% if annonce.user.id == app.user.id %}
                                <tr>
                                    {% set i = i + 1 %}
                                    <td>{{ i }}</td>
                                    <td><img src="{{ asset('/uploads/photos/' ~ annonce.imagePrincipale) | imagine_filter('my_thumb') }}" /></td>
                                    <td>{{ annonce.titre }}</td>
                                    <td>{{ annonce.dateCreation|date('d/m/Y') }}</td>
                                    <td>
                                        <a href="{{ path ('annonce_edit', { 'id': annonce.id }) }}"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" ><span class="glyphicon glyphicon-pencil"></span></button></a>
                                        <a href="{{ path ('annonce_delete', { 'id': annonce.id }) }}"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" ><span class="glyphicon glyphicon-trash"></span></button></a>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                    {% else %}
                        <div class="col-md-12" id="annonces_null" >Vous n'avez pas d'annonces en ligne.</div>
                {% endif %}
            </div>
        </div>
</section>
