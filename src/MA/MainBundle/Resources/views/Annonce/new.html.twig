{% extends "MAMainBundle:Accueil:index.html.twig" %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Oleo+Script:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Teko:400,700" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="{{ asset("css/annonce.css") }}" />
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}


{% block body %}
    <section id="contact">
        <div class="section-content">
            <h1 class="section-header">Déposer une <span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> Nouvelle annonce</span></h1>
            <h3>Veuillez remplir le formulaire pour déposer une annonce.</h3>
        </div>
        <div class="contact-section">
            <div class="container">
                {{ form_start(form, {'class': 'form-control'}) }}
                <div class="col-md-6 form-line">
                        <div class="form-group">
                            <label>Titre</label>
                            {{ form_errors(form.titre)}}
                            {{ form_widget(form.titre)}}
                        </div>
                        <div class="form-group">
                            <label>Marque</label>
                            {{ form_errors(form.marque)}}
                            {{ form_widget(form.marque)}}
                        </div>
                        <div class="form-group">
                            <label>Modele</label>
                            {{ form_errors(form.modele)}}
                            {{ form_widget(form.modele)}}
                        </div>
                        <div class="form-group">
                            <label >Etat</label>
                            {{ form_errors(form.etat)}}
                            {{ form_widget(form.etat)}}
                        </div>
                        <div class="form-group">
                            <label>Prix</label>
                            {{ form_errors(form.prix)}}
                            {{ form_widget(form.prix)}}
                        </div>
                        <div class="form-group">
                            <label>Télephone</label>
                            {{ form_errors(form.telephone)}}
                            {{ form_widget(form.telephone)}}
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            {{ form_errors(form.email)}}
                            {{ form_widget(form.email)}}
                        </div>
                        <div class="form-group">
                            <label>Adresse</label>
                            {{ form_errors(form.place.adress)}}
                            {{ form_widget(form.place.adress)}}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>N°</label>
                            {{ form_errors(form.place.street_number)}}
                            {{ form_widget(form.place.street_number, { 'id': 'street_number',  'attr': { 'class' : 'custom-class' } } )}}
                        </div>
                        <div class="form-group">
                            <label>Voie</label>
                            {{ form_errors(form.place.route)}}
                            {{ form_widget(form.place.route, { 'id': 'route',  'attr': { 'class' : 'custom-class' } })}}
                        </div>
                        <div class="form-group">
                            <label>Ville</label>
                            {{ form_errors(form.place.locality)}}
                            {{ form_widget(form.place.locality, { 'id': 'locality',  'attr': { 'class' : 'custom-class' } })}}
                        </div>
                        <div class="form-group">
                            <label>Code postal</label>
                            {{ form_errors(form.place.postal_code)}}
                            {{ form_widget(form.place.postal_code, { 'id': 'postal_code',  'attr': { 'class' : 'custom-class' } })}}
                        </div>
                        <div class="form-group">
                            <label>Région</label>
                            {{ form_errors(form.place.administrative_area_level_1)}}
                            {{ form_widget(form.place.administrative_area_level_1, { 'id': 'administrative_area_level_1',  'attr': { 'class' : 'custom-class' } })}}
                        </div>
                        <div class="form-group">
                            <label>Pays</label>
                            {{ form_errors(form.place.country)}}
                            {{ form_widget(form.place.country, { 'id': 'country',  'attr': { 'class' : 'custom-class' } })}}
                        </div>

                        <div class="form-group">
                            <label for ="description">Description</label>
                            {{ form_errors(form.description)}}
                            {{ form_widget(form.description)}}
                            <p id="compteur">0 mots | 0 Caractere / 2000</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Photo principale</label>
                                {#<input id="input-id" type="file" class="file" data-preview-file-type="text" >#}
                                {#{{ form_errors(form.images.vars.prototype.image)}}
                                {{ form_widget(form.images.vars.prototype.image)}}#}
                                {{ form_errors(form.imagePrincipale)}}
                                {{ form_widget(form.imagePrincipale)}}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Photo 2</label>
                                {{ form_errors(form.imageBis)}}
                                {{ form_widget(form.imageBis)}}
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Photo 3</label>
                                {{ form_errors(form.imageTer)}}
                                {{ form_widget(form.imageTer)}}
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-default submit"><i class="fa fa-paper-plane" aria-hidden="true"></i> Envoyer</button>
                        </div>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock body %}

