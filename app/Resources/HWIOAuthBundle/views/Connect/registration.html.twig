{% extends 'HWIOAuthBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}{% endblock %}


{% block hwi_oauth_content %}
    <div class="container" id="hwio_registration_container">
        <div class="banner-info">
            <h1><a href="{{ path ('ma_main_homepage') }}"><span class="logo-sub" id="titre">Mes Lunettes.com</span> </a></h1>
            <p>Vendez – Echangez - Cherchez – Achetez!</p>
        </div>
        <div class="col-md-offset-3 col-md-6" id="form_box_hwio_registration">
            <div class="col-md-12">
                <h3>{{ 'header.register' | trans({'%name%': userInformation.realName}, 'HWIOAuthBundle') }}</h3>
            </div>
            {% if userInformation.profilePicture is not empty %}
                <div class="col-md-offset-3 col-md-3" id="div_image">
                    <img id="profile_picture" src="{{ userInformation.profilePicture }}" />
                </div>
            {% endif %}
            <div class="login-top sign-top one" id="body_box_hwio_registration">
                {{ form_start(form, {'action': path('hwi_oauth_connect_registration', {'key': key}), 'attr': {'class': 'hwi_oauth_registration_register'}}) }}
                {{ form_widget(form) }}
                <div class="login-bottom">
                    <div class="col-md-offset-2 col-md-12">
                        <a href="{{ path('ma_main_homepage') }}" class="btn">{{ 'connect.registration.cancel' | trans({}, 'HWIOAuthBundle') }}</a>
                        <button type="submit" class="btn btn-primary">{{ 'connect.registration.submit'|trans({}, 'HWIOAuthBundle') }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $('#fos_user_registration_form_email').val('{{ userInformation.email }}');
    </script>

{% endblock hwi_oauth_content %}



